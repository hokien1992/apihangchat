<!-- MAIN -->
<main class="site-main">
    <div class="columns container">
        <!-- Block  Breadcrumb-->
        <ol class="breadcrumb no-hide">
            <li><a href="/" title="Trang chủ">Trang chủ</a></li>
            {{#each htmlBreakcrum}}
            <li><a href="{{this.slug}}" title="{{this.name}}">{{this.name}}</a></li>
            {{/each}}
            <li class="active">{{itemproduct.name}}</li>
        </ol><!-- Block  Breadcrumb-->
        <div class="row">
            <!-- Main Content -->
            <div class="col-md-9 col-md-push-3  col-main ">
                <h1 class="page-heading">
                    <span class="page-heading-title2">{{itemproduct.name}}</span>
                </h1>
                <article class="entry-detail">
                    <div class="entry-meta-data">
                        <span class="author">
                        <i class="fa fa-user"></i> 
                        by: <a href="#">Admin</a></span>
                        <span class="cat">
                            <i class="fa fa-folder-o"></i>
                            <a href="#">News, </a>
                            <a href="#">Promotions</a>
                        </span>
                        <span class="comment-count">
                            <i class="fa fa-comment-o"></i> 3
                        </span>
                        <span class="date"><i class="fa fa-calendar"></i> 2014-08-05 07:01:49</span>
                        {{!-- <span class="post-star">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-half-o"></i>
                            <span>(7 votes)</span>
                        </span> --}}
                    </div>
                    {{!-- <div class="entry-photo">
                        <img src="images/media/detail/blog-full.jpg" alt="Blog">
                    </div> --}}
                    <div class="content-text clearfix">
                        {{{itemproduct.detail}}}
                    </div>
                    <div class="entry-tags">
                        <span>Tags:</span>
                        <a href="#">beauty,</a>
                        <a href="#">medicine,</a>
                        <a href="#">health</a>
                    </div>
                </article>
                <!-- Related Posts -->
                <div class="single-box">
                    <h2>Bài viết liên quan</h2>
                    <ul class="related-posts owl-carousel" data-dots="false" data-loop="true" data-nav = "true" data-margin = "30" data-autoplayTimeout="1000" data-autoplayHoverPause = "true" data-responsive='{"0":{"items":1},"600":{"items":2},"1000":{"items":3}}'>
                        {{#if dataAllProductRelate}}
                            {{#each dataAllProductRelate}}
                        <li class="post-item">
                            <article class="entry">
                                <div class="entry-thumb image-hover2">
                                    <a href="{{this.slug}}" title="{{this.name}}">
                                        <img src="{{this.imagePath}}" alt="{{this.name}}">
                                    </a>
                                </div>
                                <div class="entry-ci">
                                    <h3 class="entry-title"><a href="{{this.slug}}" title="{{this.name}}">{{this.name}}</a></h3>
                                    <div class="entry-meta-data">
                                        <span class="date">
                                            <i class="fa fa-calendar"></i> 2014-08-05
                                        </span>
                                    </div>
                                    <div class="entry-more">
                                        <a href="{{this.slug}}" title="{{this.name}}">Chi tiết</a>
                                    </div>
                                </div>
                            </article>
                        </li>
                        {{/each}}
                        {{/if}}
                    </ul>
                </div>
                <!-- ./Related Posts -->
            </div><!-- Main Content -->
            
            <!-- Sidebar -->
            <div class=" col-md-3 col-md-pull-9   col-sidebar">

                <!-- Block  Popular Posts-->
                <div class="block-sidebar block-PopularPosts">
                    <div class="block-title">
                        <strong>Bài viết mới nhất</strong>
                    </div>
                    <div class="block-content">
                        <ul class="blog-list-sidebar clearfix">
                            {{#if dataNewsFocus}}
                            {{#each dataNewsFocus}}
                            <li>
                                <div class="post-thumb">
                                    <a href="{{this.slug}}" title="{{this.name}}"><img alt="{{this.name}}" src="{{this.imagePath}}"></a>
                                </div>
                                <div class="post-info">
                                    <h5 class="entry_title"><a href="{{this.slug}}" title="{{this.name}}">{{this.name}}</a></h5>
                                    <div class="post-meta">
                                        <span class="date"><i class="fa fa-calendar"></i> 2014-08-05</span>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                            {{/if}}
                        </ul>
                    </div>
                </div><!-- Block  Popular Posts-->
            </div><!-- Sidebar -->
        </div>
    </div>
</main><!-- end MAIN -->