
{{#contentFor 'pageStyles'}}
<link rel="stylesheet" type="text/css" href="template/css/myCss/users.css">
<style>
  .button_upload_image_user a{position: relative;}
  .button_upload_image_user{text-align: center;margin-top: 10px;}

  .image_user{text-align: center}
  .image_user img{display: inline-block}
  #fileUpload{
    opacity: 0;
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 999;
  }
  .button_upload_image_user:hover a input#fileUpload{cursor: pointer;}
  .image_user{width: 80px;height: 80px;border-radius: 50%;overflow: hidden;display: inline-block}
  .box_image_user{text-align: center}
</style>
{{/contentFor}}
{{#contentFor 'pageScripts'}}
<script type="text/javascript">
function readURL(input) {
 if (input.files && input.files[0]) {
     var reader = new FileReader();

     reader.onload = function (e) {
         $('#blah')
             .attr('src', e.target.result);
     };
     reader.readAsDataURL(input.files[0]);
 }
 }
</script>
{{/contentFor}}
<!-- MAIN -->
<main class="site-main">
    <div class="columns container">
        <!-- Block  Breadcrumb-->
        <ol class="breadcrumb no-hide">
            <li><a href="/" title="{{settings.namecompany}}">Trang chủ </a></li>
            <li class="active">Thông tin cá nhân</li>
        </ol><!-- Block  Breadcrumb-->
        <div class="row">
          {{> frontend/users/sidebar }}
          <div class="col-sm-9">
            <div class="title_box_user_right_all clearfix">
              <h4><i class="fa fa-list" aria-hidden="true"></i>
                <a href="javascript:void(0)">Thông tin cá nhân</a>
              </h4>
            </div>
            <form action="/users/addBannerAffiliate" method="post" enctype="multipart/form-data">
              <input type="hidden" name="_csrf" value="{{ csrfToken }}">
              <div class="box_user_right clearfix">
                <div class="col-sm-3">
                  <div class="box_image_user clearfix">
                    <div class="">
                      <img src="/user/user.png" alt="{{dataUser.name}}" id="blah">
                    </div>
                    <div class="button_upload_image_user clearfix">
                        <a href="javascript:void(0)" class="btn btn-sm btn-primary">
                          <input type='file' onchange="readURL(this);" name="file" id="fileUpload"/>
                          Tải ảnh
                        </a>
                    </div>
                  </div>

                </div>
                <div class="col-sm-9">
                  <div class="info_profile clearfix">
                    <div class="form-group clearfix">
                      <div class="col-sm-3">
                        <label for="name">Tên banner: </label>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" name="name" value="" placeholder="Tên banner">
                      </div>
                    </div>
                    <div class="form-group clearfix">
                      <div class="col-sm-3">
                        <label for="name">Đường dẫn: </label>
                      </div>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" name="link" value="" placeholder="Đường dẫn">
                      </div>
                    </div>
                    <div class="form-group clearfix">
                      <div class="col-sm-3">
                        <label for="sort_id">Sắp xếp: </label>
                      </div>
                      <div class="col-sm-9">
                        <input type="number" class="form-control" name="sort_id" min="0" value="0" placeholder="Sắp xếp">
                      </div>
                    </div>
                    <div class="form-group clearfix">
                      <div class="col-sm-3">
                        <label for="description">Mô tả: </label>
                      </div>
                      <div class="col-sm-9">
                        <textarea name="description" rows="3" class="form-control" placeholder="Mô tả banner"></textarea>
                      </div>
                    </div>
                    <div class="form-group clearfix">
                      <div class="col-sm-3">
                        <label for="address"> </label>
                      </div>
                      <div class="col-sm-9">
                        <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
    </div>
</main><!-- end MAIN -->
<div class="h15"></div>
