{{#contentFor 'pageStyles'}}
<!-- <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
<link rel="stylesheet" type="text/css" href="template/css/myCss/users.css">
{{/contentFor}}
<!-- MAIN -->
<main class="site-main">
    <div class="columns container">
        <!-- Block  Breadcrumb-->
        <ol class="breadcrumb no-hide">
            <li><a href="/" title="{{settings.namecompany}}">Trang chủ </a></li>
            <li class="active">Quên mật khẩu</li>
        </ol><!-- Block  Breadcrumb-->
        <div class="row">
          <div class="col-sm-12">
            <div class="col-sm-4 col-sm-offset-4">
              <div class="content_form_login clearfix">
                <div class="text-center">
                    <h4>{{ title }}</h4>
                </div>
                {{# if hasErrors}}
                  <div class="alert alert-sm alert-danger">
                  {{# each messages }}
                     {{this}}<br />
                  {{/each}}
                  </div>
                {{/if}}
                {{#if_eq success 1}}
                    <div class="alert alert-sm alert-success">
                      Bạn đã đổi mật khẩu thành công !
                    </div>
                {{/if_eq}}
                <form action="/users/forgetPassword" method="post">
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <input type="hidden" name="token_confirm" value="{{ token_confirm }}">
                    <div class="form-group">
                        <label for="password">Mật khẩu mới</label>
                        <input type="password" class="form-control" name="password" value="" placeholder="Mật khẩu mới">
                    </div>
                    <div class="form-group">
                        <label for="password">Nhập lại mật khẩu</label>
                        <input type="password" class="form-control" name="repassword" value="" placeholder="Nhập lại mật khẩu">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-sn btn-success">Cập nhật</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
</main><!-- end MAIN -->
<div class="h15"></div>
{{#contentFor 'pageScripts'}}
<input type="text" name="urlRoot" id="urlRoot" value="{{urlRoot}}">
<script src="template/js/myJs/users/users.js"></script>
{{/contentFor}}
