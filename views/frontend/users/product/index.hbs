
{{#contentFor 'pageStyles'}}
<link rel="stylesheet" type="text/css" href="template/css/myCss/users.css">
{{/contentFor}}
<!-- MAIN -->
<main class="site-main">
    <div class="columns container">
        <!-- Block  Breadcrumb-->
        <ol class="breadcrumb no-hide">
            <li><a href="/" title="{{settings.namecompany}}">Trang chủ </a></li>
            <li class="active">Danh sách sản phẩm</li>
        </ol><!-- Block  Breadcrumb-->
        <div class="row">
          {{> frontend/users/sidebar }}
          <div class="col-sm-9">
            <div class="title_box_user_right_all clearfix">
              <h4 style="float: left"><i class="fa fa-list" aria-hidden="true"></i>
                <a href="javascript:void(0)">Danh sách sản phẩm</a>

              </h4>
            </div>
            <div class="box_user_right">
              <div class="search_product_affiliate clearfix">
                <div class="row">
                  <form class="" action="/users/product" method="get">
                    <div class="col-sm-3">
                      <div class="form-group">
                        <label for="name">Tên sản phẩm</label>
                        <input type="text" name="name" class="form-control" placeholder="Tên sản phẩm">
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                        <label for="category_id">Danh mục sản phẩm</label>
                        <select class="form-control" name="categoryId">
                          <option value="">Danh mục sản phẩm</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                        <label for="code">Mã sản phẩm</label>
                        <input type="text" name="code" class="form-control" placeholder="Mã sản phẩm">
                      </div>
                    </div>
                    <div class="col-sm-3">
                      <div class="form-group">
                        <label for="code"> &nbsp</label>
                        <div class="clearfix">

                        </div>
                        <button type="submit" class="btn-purple">
                          <i class="fa fa-search" aria-hidden="true"></i>
                          Tìm kiếm
                        </button>
                        <button type="button" class="btn-purple" style="float: right;">
                          <a href="/users/product/create" style="color: #ffffff;">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            Thêm
                          </a>
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <div class="table-reponsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr class="active">
                      <th style="width: 40px;text-align: center">#</th>
                      <th>Mã</th>
                      <th>Ảnh</th>
                      <th>Tên sản phẩm</th>
                      <th>Giá bán</th>
                      <th>Giá gốc</th>
                      <th>Hành động</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each listProduct as | dataUser dataUser|}}
                    <tr>
                      <td style="text-align: center">{{@key}}</td>
                      <td>{{this.code}}</td>
                      <td style="text-align: center">
                        <img src="{{this.imagePath}}" alt="" style="width: 40px;height: 40px">
                      </td>
                      <td style="color: #777777">
                        <strong>{{name}}</strong>
                      </td>
                      <td>
                        <span class="red price">
                          <strong>
                            {{formatNumber price}}<sup>đ</sup>
                          </strong>
                        </span>
                      </td>
                      <td></td>
                      <td style="text-align: center">

                        <a href="/users/product/{{this._id}}" target="_blank" class="btn-sm btn-success" style="margin: 0px 3px;">
                          <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a href="/users/product/delete/{{this._id}}" class="btn-sm btn-danger" style="margin: 0px 3px;">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                      </td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
                <ul class="pagination">
                  {{#paginate pagination type="previous"}}
                    <li {{#if disabled}}class="disabled"{{/if}}><a href="/users/product?page={{n}}" >Prev</a></li>
                  {{/paginate}}
                  {{#paginate pagination type="middle" limit="3"}}
                    <li {{#if active}}class="active"{{/if}}><a href="/users/product?page={{n}}">{{n}}</a></li>
                  {{/paginate}}
                  {{#paginate pagination type="next"}}
                    <li {{#if disabled}}class="disabled"{{/if}}><a href="/users/product?page={{n}}">Next</a></li>
                  {{/paginate}}
                </ul>
              </div>
            </div>
          </div>
        </div>
    </div>
</main><!-- end MAIN -->
<div class="h15"></div>
