
{{#contentFor 'pageStyles'}}
<!-- <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
<link rel="stylesheet" type="text/css" href="template/css/myCss/users.css">
{{/contentFor}}

<!-- MAIN -->
<main class="site-main">
    <div class="columns container">
        <!-- Block  Breadcrumb-->
        <ol class="breadcrumb no-hide">
            <li><a href="/" title="{{settings.namecompany}}">Trang chủ </a></li>
            <li class="active">Đăng ký tài khoản</li>
        </ol><!-- Block  Breadcrumb-->
        <div class="row">
          <div class="col-sm-9 col-sm-offset-1">
            <div class="box_signup clearfix">
              {{# if hasErrors}}
                  {{# each messages }}
                    {{#if_eq this "1"}}
                      <div class="alert alert-sm alert-success">
                        Bạn đã đăng ký thành công tài khoản. Bạn vui lòng kiểm tra email để kích hoạt tài khoản !
                      </div>
                    {{else}}
                      <div class="alert alert-sm alert-danger">
                        {{this}}
                      </div>
                    {{/if_eq}}
                  {{/each}}
              {{/if}}
              <form action="/users/signup" method="post">
                  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                  <h4><strong>Thông tin khách hàng</strong></h4>
                  <hr>
                  <div class="row">
                    <div class="form-group">
                      <div class="col-xs-2 col-sm-3">
                        <label for="firstname">Họ: </label>
                      </div>
                      <div class="col-xs-4 col-sm-4">
                        <input type="text" name="firstname" class="form-control" placeholder="Họ" required>
                      </div>
                      <div class="col-xs-2 col-sm-1">
                        <label for="lastname">Tên: </label>
                      </div>
                      <div class="col-xs-4 col-sm-4">
                        <input type="text" name="lastname" class="form-control" placeholder="Tên" required>
                      </div>
                    </div>
                    <div class="h15"></div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="Email">Email: </label>
                      </div>
                        <div class="col-sm-9">
                          <input type="email" name="email" class="form-control" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="h15"></div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="username">Tài khoản đăng nhập:</label>
                      </div>
                        <div class="col-sm-9">
                          <input type="text" name="username" class="form-control" placeholder="ID Đăng nhập">
                        </div>
                    </div>
                    <div class="h15"></div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="Email">ID epay.fan:</label>
                      </div>
                        <div class="col-sm-9">
                          <input type="text" name="idepay" class="form-control" placeholder="ID Đăng nhập epay.fan (Nếu có)">
                        </div>
                    </div>
                    <div class="h15"></div>
                    <div class="form-group">
                      <div class="col-sm-3 ">
                        <label for="introduce">ID người giới thiệu:</label>
                      </div>
                        <div class="col-sm-9">
                          <input type="text" name="introduce" value="{{introduce}}" class="form-control" placeholder="ID người giới thiệu (Nếu có)">
                        </div>
                    </div>
                    <div class="h15"></div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="phone">Điện thoại: </label>
                      </div>
                        <div class="col-sm-9">
                          <input type="text" name="phone" class="form-control" placeholder="Điện thoại" required>
                        </div>
                    </div>
                    <div class="h15 hidden-xs">

                    </div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="phone">Khu vực: </label>
                      </div>
                      <div class="col-sm-9">
                        <div class="row">
                          <div class="col-sm-4">
                            <div class="visible-xs">
                              <label for="country">Quốc gia</label>
                            </div>
                            <select class="form-control" name="country" onChange="changeCountry()" id="countryCustomer" required>
                              <option value="0">Quốc gia</option>
                              {{#each dataCountry}}
                              <option value="{{this.id}}">{{this.name}}</option>
                              {{/each}}
                            </select>
                          </div>
                          <div class="h15 visible-xs"></div>
                          <div class="col-sm-4">
                            <div class="visible-xs">
                              <label for="provinceCustomer">Tỉnh thành</label>
                            </div>
                            <select class="form-control" onChange="changeProvince()" name="province" id="provinceCustomer" required>
                              <option value="0">Tỉnh/Thành</option>
                            </select>
                          </div>
                          <div class="h15 visible-xs"></div>
                          <div class="col-sm-4">
                            <div class="visible-xs">
                              <label for="phone">Quận huyện</label>
                            </div>
                            <select class="form-control" name="district" id="districtCustomer">
                              <option value="0">Quận/Huyện</option>
                            </select>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="h15 hidden-xs"></div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="address">Địa chỉ: </label>
                      </div>
                        <div class="col-sm-9">
                          <input type="text" name="address" class="form-control" placeholder="Địa chỉ" required>
                        </div>
                    </div>
                    <div class="h15 hidden-xs">

                    </div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="note">Ghi chú: </label>
                      </div>
                      <div class="col-sm-9">
                        <textarea name="note" placeholder="Ghi chú" rows="4" class="form-control"></textarea>
                      </div>
                    </div>
                    <div class="h15 hidden-xs">

                    </div>
                  </div>
                  <h4><strong>Mật khẩu</strong></h4>
                  <hr>
                  <div class="row">
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="password">Mật khẩu: </label>
                      </div>
                      <div class="col-sm-9">
                        <input type="password" name="password" class="form-control" placeholder="Mật khẩu" required>
                      </div>
                    </div>
                    <div class="h15 hidden-xs">

                    </div>
                    <div class="form-group">
                      <div class="col-sm-3">
                        <label for="password">Nhập lại mật khẩu: </label>
                      </div>
                      <div class="col-sm-9">
                        <input type="password" name="repassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
                      </div>
                    </div>
                    <div class="h15 hidden-xs">

                    </div>
                  </div>


                  <div class="text-center clearfix">
                      <button type="submit" class="btn btn-sn btn-success">Đăng ký</button>
                  </div>
                  <div class="h15">

                  </div>
              </form>
            </div>
          </div>
        </div>
    </div>
</main><!-- end MAIN -->
<div class="h15"></div>
{{#contentFor 'pageScripts'}}
<script src="template/js/myJs/users/users.js"></script>
{{/contentFor}}
